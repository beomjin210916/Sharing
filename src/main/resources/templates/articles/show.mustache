{{>layouts/header}}
<div class="container">
    <table class="table table-hover">

        {{#article}}
            <thead>
            <tr>
                <th scope="col">제목:</th>
                <th scope="col">{{title}}</th>
            </tr>
            </thead>
            <tbody>
            <tr>
                <th scope="row">인원:</th>
                <td>{{people}}</td>
            </tr>
            <tr>
                <th scope="row">깃허브 주소</th>
                <td>{{gitHubURL}}</td>
            </tr>
            <tr>
                <th scope="row">카카오URL</th>
                <td>{{kakaoURL}}</td>
            </tr>
            <tr>
                <th scope="row">내용</th>
                <td>{{content}}</td>
            </tr>
                <div class="bg-white rounded shadow-sm"><img src="/images/{{fileName}}" alt="" class="img-fluid img-fill-container"></div>
            </tbody>

    </table>

    <div class="btn">
        <a href="/articles/{{id}}/edit">
            <button type="button" class="btn btn-primary">수정하기</button>
        </a>
    </div>

    <div class="btn">
        <a href="/articles/{{id}}/deleteArticle">
            <button type="button" class="btn btn-danger">삭제하기</button>
        </a>
    </div>

        {{/article}}

    <div class="btn">
        <a href="/">
            <button type="button" class="btn btn-primary">메인화면으로 돌아가기</button>
        </a>
    </div>
</div>


{{>layouts/footer}}