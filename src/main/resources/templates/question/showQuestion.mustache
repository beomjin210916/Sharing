{{>layouts/header}}
<div class="container">
<table class="table table-hover">

    {{#question}}
    <thead>
    <tr>
        <th scope="col">제목:</th>
        <th scope="col">{{title}}</th>
    </tr>
    </thead>
    <tbody>
    <tr>
        <th scope="row">내용</th>
        <td>{{content}}</td>
    </tr>
    </tbody>
    {{/question}}
</table>

<div class="btn">
    <a href="/question/{{question.id}}/editQuestion">
        <button type="button" class="btn btn-primary">수정하기</button>
    </a>
</div>

    <div class="btn">
        <a href="/question/{{question.id}}/deleteQuestion">
            <button type="button" class="btn btn-danger">삭제하기</button>
        </a>
    </div>

<div class="btn">
    <a href="/question/questions">
        <button type="button" class="btn btn-primary">질문 리스트로 돌아가기</button>
    </a>
</div>
</div>

{{>comments/questionComments}}


{{>layouts/footer}}